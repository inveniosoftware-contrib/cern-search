{
  "settings": {
    "index.percolator.map_unmapped_fields_as_string": true,
    "index.mapping.total_fields.limit": 3000,
    "analysis": {
      "analyzer": {
        "autocomplete": {
          "tokenizer": "autocomplete",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "didyoumean": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "shingle"]
        },
        "suggester_search": {
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "autocomplete": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter"
          ]
        }
      },
      "filter": {
        "shingle": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3
        }
      }
    }
  },
  "mappings": {
    "suggest_v0.0.2": {
      "numeric_detection": true,
      "_meta": {
        "_owner": "CernSearch-Administrators@cern.ch"
      },
      "properties": {
        "_access": {
          "type": "object",
          "properties": {
            "owner":{
              "type": "keyword"
            },
            "read": {
              "type": "keyword"
            },
            "update": {
              "type": "keyword"
            },
            "delete": {
              "type": "keyword"
            }
          }
        },
        "_data": {
          "type": "object",
          "properties": {
            "title": {
              "type": "text",
              "analyzer": "english",
              "copy_to": [
                "suggest",
                "didyoumean"
              ],
              "fields": {
                "exact_match": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "suggest": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "suggester_search"
        },
        "didyoumean": {
          "type": "text",
          "analyzer": "didyoumean",
          "search_analyzer": "suggester_search"
        },
        "control_number": {
          "type": "keyword"
        },
        "$schema": {
          "enabled": false
        }
      }
    }
  }
}