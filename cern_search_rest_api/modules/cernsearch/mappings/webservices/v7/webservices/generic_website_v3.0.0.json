{
  "settings": {
    "index.percolator.map_unmapped_fields_as_text": true,
    "index.mapping.total_fields.limit": 50,
    "index.query.default_field": [
      "_data.*"
    ],
    "index.highlight.max_analyzed_offset": 10000000,
    "analysis": {
      "tokenizer": {
        "url_tokenizer": {
          "type": "pattern",
          "pattern": "\\.|(\\:\\/\\/)|\\/"
        },
        "autocomplete": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter"
          ]
        }
      },
      "filter": {
        "url_stop": {
          "type": "stop",
          "stopwords": [
            "http",
            "https",
            "ftp",
            "www",
            "web",
            "cern",
            "ch"
          ]
        }
      },
      "analyzer": {
        "url_analyzer": {
          "type": "custom",
          "tokenizer": "url_tokenizer",
          "filter": [
            "url_stop",
            "lowercase"
          ]
        },
        "autocomplete": {
          "tokenizer": "autocomplete",
          "filter": [
            "lowercase"
          ]
        },
        "autocomplete_search": {
          "tokenizer": "lowercase"
        }
      },
      "normalizer": {
        "case_insensitive_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "numeric_detection": true,
    "properties": {
      "_access": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "keyword"
          },
          "read": {
            "type": "keyword"
          },
          "update": {
            "type": "keyword"
          },
          "delete": {
            "type": "keyword"
          }
        }
      },
      "_data": {
        "type": "object",
        "properties": {
          "name": {
            "type": "text",
            "copy_to": [
              "suggest"
            ],
            "analyzer": "english",
            "fields": {
              "french": {
                "type": "text",
                "analyzer": "french"
              },
              "exact_match": {
                "type": "keyword"
              }
            }
          },
          "site": {
            "type": "text",
            "analyzer": "url_analyzer",
            "fields": {
              "exact_match": {
                "type": "keyword",
                "normalizer": "case_insensitive_normalizer",
                "eager_global_ordinals": true
              }
            }
          },
          "origin": {
            "type": "text",
            "analyzer": "url_analyzer",
            "fields": {
              "exact_match": {
                "type": "keyword"
              }
            }
          },
          "content": {
            "type": "text",
            "analyzer": "english",
            "fields": {
              "french": {
                "type": "text",
                "analyzer": "french"
              }
            }
          },
          "authors": {
            "type": "text",
            "copy_to": "suggest",
            "fields": {
              "exact_match": {
                "type": "keyword",
                "normalizer": "case_insensitive_normalizer",
                "eager_global_ordinals": true
              }
            }
          },
          "keywords": {
            "type": "text",
            "fields": {
              "exact_match": {
                "type": "keyword",
                "normalizer": "case_insensitive_normalizer",
                "eager_global_ordinals": true
              }
            }
          }
        }
      },
      "suggest": {
        "type": "text",
        "analyzer": "autocomplete",
        "search_analyzer": "autocomplete_search"
      },
      "promoted": {
        "type": "boolean"
      },
      "promoted_keywords": {
        "type": "keyword",
        "normalizer": "case_insensitive_normalizer"
      },
      "collection": {
        "type": "keyword",
        "eager_global_ordinals": true
      },
      "image_source": {
        "enabled": false
      },
      "analytics_relevance": {
        "type": "double"
      },
      "last_updated": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "url": {
        "type": "text",
        "analyzer": "url_analyzer",
        "fields": {
          "exact_match": {
            "normalizer": "case_insensitive_normalizer",
            "type": "keyword"
          }
        }
      },
      "_updated": {
        "type": "date"
      },
      "_created": {
        "type": "date"
      },
      "control_number": {
        "type": "keyword"
      },
      "$schema": {
        "enabled": false
      }
    }
  }
}
